<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/container_general"
            android:layout_width="349dp"
            android:layout_height="69dp"
            android:background="@drawable/shape_profile"
            android:foreground="@drawable/ripple_effect"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.144" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="78dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_general"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/container_general" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/user_icon_settings"
            app:layout_constraintBottom_toBottomOf="@+id/container_general"
            app:layout_constraintStart_toStartOf="@+id/container_general"
            app:layout_constraintTop_toTopOf="@+id/container_general"
            app:layout_constraintVertical_bias="0.467" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/desc_general"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/container_general"
            app:layout_constraintEnd_toStartOf="@+id/btn_general"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/btn_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/container_general"
            app:layout_constraintEnd_toEndOf="@+id/container_general"
            app:layout_constraintTop_toTopOf="@+id/container_general"
            app:layout_constraintVertical_bias="0.483" />

        <!--        container location-->

        <View
            android:id="@+id/container_location"
            android:layout_width="349dp"
            android:layout_height="69dp"
            android:background="@drawable/shape_profile"
            android:foreground="@drawable/ripple_effect"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_general"
            app:layout_constraintVertical_bias="0.031" />

        <TextView
            android:id="@+id/tv_locationSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_location"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toTopOf="@+id/container_location" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/map_icon_settings"
            app:layout_constraintBottom_toBottomOf="@+id/container_location"
            app:layout_constraintStart_toStartOf="@+id/container_location"
            app:layout_constraintTop_toTopOf="@+id/container_location" />

        <TextView
            android:id="@+id/tv_descLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/desc_location"
            android:textColor="@color/grey"
            android:alpha="0.8"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_locationSettings" />

        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/container_location"
            app:layout_constraintEnd_toEndOf="@+id/container_location"
            app:layout_constraintTop_toTopOf="@+id/container_location"
            app:layout_constraintVertical_bias="0.488" />

        <View
            android:id="@+id/container_logout"
            android:layout_width="349dp"
            android:layout_height="69dp"
            android:background="@drawable/shape_profile"
            android:foreground="@drawable/ripple_effect"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_location"
            app:layout_constraintVertical_bias="0.031" />

        <TextView
            android:id="@+id/tv_logoutSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toTopOf="@+id/container_logout" />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/logout_icon_settings"
            app:layout_constraintBottom_toBottomOf="@+id/container_logout"
            app:layout_constraintStart_toStartOf="@+id/container_logout"
            app:layout_constraintTop_toTopOf="@+id/container_logout" />

        <TextView
            android:id="@+id/tv_descLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/desc_logout"
            android:textColor="@color/grey"
            android:alpha="0.8"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_logout"
            app:layout_constraintTop_toBottomOf="@+id/tv_logoutSettings" />

        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/container_logout"
            app:layout_constraintEnd_toEndOf="@+id/container_logout"
            app:layout_constraintTop_toTopOf="@+id/container_logout"
            app:layout_constraintVertical_bias="0.488" />

        <TextView
            android:id="@+id/pageSetting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/title_settings"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/notification_icon"
            android:src="@drawable/notification_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/textAboutUs"
            android:textColor="@color/green"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_logout" />

        <TextView
            android:id="@+id/desc_aboutUs"
            android:layout_width="332dp"
            android:layout_height="74dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:justificationMode="inter_word"
            android:text="@string/desc_aboutUs"
            android:textColor="@color/green"
            android:textSize="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_aboutUs" />

        <ImageView
            android:id="@+id/iconReoil"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/reoil_icon_textgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.869"
            app:layout_constraintStart_toEndOf="@+id/tv_aboutUs"
            app:layout_constraintTop_toBottomOf="@+id/container_logout" />

        <ImageView
            android:id="@+id/imageViewProgress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/r_logo"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.439" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>